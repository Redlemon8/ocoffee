<%- include('./partials/header') %>
<%- include('./partials/banner') %>

<!-- PRODUCT SHEET -->

<section class="new-items-container">
  <h2>Notre catalogue</h2>
  <section class="items-container brown">

    <% allProducts.forEach(product => { %>

      <section class="items-box">
        <h3><%= product.name %></h3>
        <% if (product.available === "Non") { %>

          <picture>
            <source srcset="/images/coffees/<%= product.reference %>-non-available.webp" type="image/webp">
            <source srcset="/images/coffees/<%= product.reference %>-non-available.png" type="image/png">
            <img src="/images/coffees/<%= product.reference %>-non-available.png" alt="Image de café d'origine <%= product.origin %>">
          </picture>
         
        <% } else { %>
          <picture>
            <source srcset="/images/coffees/<%= product.reference %>.webp" type="image/webp">
            <source srcset="/images/coffees/<%= product.reference %>.png" type="image/png">
            <img src="/images/coffees/<%= product.reference %>.png" alt="Image de café d'origine <%= product.origin %>">
          </picture>

        <% } %>
        <p>Description : <%= product.description %></p>
        <p>Origine : <%= product.origin %></p>
        <p>Prix au kilo : <%= product.price_per_kilo %> €</p>
        <p>Caractéristique principale : <%= product.characteristic %></p>
      </section>
    
    <% }) %>
    
  </section>
</section>



<%- include('./partials/footer') %>