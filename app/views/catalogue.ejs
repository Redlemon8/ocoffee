<%- include('./partials/header') %>

<!-- MAIN -->
<!-- ILLUSTRATION SECTION -->
    <section id="illustration">
      <picture>
        <source srcset="/images/nathan-dumlao-6VhPY27jdps-unsplash.webp" type="image/webp">
        <source srcset="/images/nathan-dumlao-6VhPY27jdps-unsplash.jpg" type="image/jpg">
        <img src="/images/nathan-dumlao-6VhPY27jdps-unsplash.jpg" alt="Image de trois café partagé entre amis">
      </picture>
      <div id="illustration-title">
        <h1>O'coffee</h1>
      </div>
    </section>


<!-- NEW PRODUCT SECTION -->
  <section id="discover-container">
    <h2>Catalogue</h2>
    <div>
      <label for="coffe"></label>
      <select class="category" name="coffe" id="coffe" aria-label="Selectionnez l'origine">
        <option value="origine">Catégorie</option>

        <% characteristicsProducts.forEach(coffe => { %>
          <option value="<%= coffe.characteristic %>"><%= coffe.characteristic %></option>
        <% }) %>

      </select>
    </div>

    <section class="items-container brown">

      <% threeProductList.forEach(oneProduct => { %>
       
        <section class="items-box">
          <h3><%= oneProduct.name %></h3>
          <picture>
            <source srcset="/images/coffees/<%= oneProduct.reference %>.webp" type="image/webp">
            <source srcset="/images/coffees/<%= oneProduct.reference %>.png" type="image/png">
            <img src="/images/coffees/<%= oneProduct.reference %>.png" alt="Image de café d'origine <%= oneProduct.origin %>">
          </picture>
          <p>Caractéristique principale : <%= oneProduct.characteristic %></p>
          <button class="anchor-color"><a href="/produit/<%= oneProduct.id %>">Découvrir</a></button>
        </section>

      <% }) %>
    </section>
    <div>
      <button class="select-all"><a href="catalogue/all">Voir tout</a></button>
    </div>
  </section>

<%- include('./partials/footer') %>
